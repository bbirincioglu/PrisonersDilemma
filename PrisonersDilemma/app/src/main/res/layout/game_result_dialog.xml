<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:text="COCO"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:text="CODE"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:text="DECO"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:text="DEDE"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:text="comm."
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:text="pun."
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:id="@id/copCop"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:id="@id/copDef"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:id="@id/defCop"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:id="@id/defDef"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:id="@id/withCommitmentCheckBox"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:id="@id/punishmentEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:text="NAME-SURN."
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_span="2"/>
        <EditText
            android:text="COMMITMENT"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_span="2"/>
        <EditText
            android:text="DECISION"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_span="2"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:id="@+id/p1NameEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_span="2"/>
        <EditText
            android:id="@+id/p1CommitmentEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_span="2"/>
        <EditText
            android:id="@+id/p1DecisionEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_span="2"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:id="@+id/p2NameEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_span="2"/>
        <EditText
            android:id="@+id/p2CommitmentEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_span="2"/>
        <EditText
            android:id="@+id/p2DecisionEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_span="2"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/restartButton"
            android:text="RESTART"
            android:background="@android:color/holo_blue_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_span="2"/>
        <Button
            android:id="@+id/exitButton"
            android:text="EXIT"
            android:background="@android:color/holo_blue_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"/>
    </TableRow>

</TableLayout>