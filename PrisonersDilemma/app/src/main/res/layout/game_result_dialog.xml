<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:text="NAME-SURN."
            android:textStyle="bold"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_red_dark"/>
        <EditText
            android:text="COMMITMENT"
            android:textStyle="bold"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_red_dark"/>
        <EditText
            android:text="DECISION"
            android:textStyle="bold"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_red_dark"/>
        <EditText
            android:text="PAYOFF"
            android:textStyle="bold"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_red_dark"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:id="@+id/p1NameEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:id="@+id/p1CommitmentEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:id="@+id/p1DecisionEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>

        <EditText
            android:id="@+id/p1PayoffEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:id="@+id/p2NameEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:id="@+id/p2CommitmentEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
        <EditText
            android:id="@+id/p2DecisionEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>

        <EditText
            android:id="@+id/p2PayoffEditText"
            android:text="null"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="wrap_content"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/restartButton"
            android:text="RESTART"
            android:background="@android:color/holo_blue_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
        <Button
            android:id="@+id/exitButton"
            android:text="EXIT"
            android:background="@android:color/holo_blue_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

</TableLayout>