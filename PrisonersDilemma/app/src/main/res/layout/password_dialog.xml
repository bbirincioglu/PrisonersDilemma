<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@id/passwordDialogEditText"
        android:hint="Enter Password:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@id/errorMessageTextView"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@id/passwordDialogPreviousButton"
            android:text="@string/passwordDialogPreviousButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
        <Button
            android:id="@id/passwordDialogNextButton"
            android:text="@string/passwordDialogNextButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"/>
    </LinearLayout>
</LinearLayout>